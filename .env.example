# Base de Datos PostgreSQL
DATABASE_URL=postgresql://usuario:password@localhost:5432/inventario_db

# O configuración por partes para PostgreSQL
DB_NAME=inventario_db
DB_USER=postgres
DB_PASSWORD=tu_contraseña
DB_HOST=localhost
DB_PORT=5432

# SQLite para desarrollo local
SQLITE_FILE=./database.sqlite

# JWT Secret para tokens de autenticación
# Generar: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=tu_clave_secreta_muy_segura_y_compleja_2024

# API_KEY - Protección de todas las rutas /api/*
# Generar: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# Se envía en header: x-api-key: tu_api_key_aqui
# O en query: ?api_key=tu_api_key_aqui
API_KEY=tu_api_key_super_segura_aqui_32_caracteres_minimo

# Entorno
NODE_ENV=development

# Puerto del servidor
PORT=5000

# CORS - Dominios permitidos (para producción)
# CORS_ORIGIN=http://localhost:3000,https://tuapp.com

# ========================
# EJEMPLO DE USO CON CURL
# ========================

# Rutas públicas (SIN API_KEY):
# curl http://localhost:5000/
# curl http://localhost:5000/health

# Rutas API (CON API_KEY en header):
# curl -H "x-api-key: tu_api_key_aqui" http://localhost:5000/api/productos

# O con API_KEY en query params:
# curl http://localhost:5000/api/productos?api_key=tu_api_key_aqui
